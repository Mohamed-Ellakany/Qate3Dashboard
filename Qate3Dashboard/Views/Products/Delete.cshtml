@model ProductViewModel
@{
    ViewData["Title"] = "الحذف";
}

<h1>هل انت متاكد ؟</h1>


<div class="container  px-5">
    <form class="row g-3" asp-action="Delete" asp-controller="Products">
        <div asp-validation-summary="All" class="text danger"></div>

       <input asp-for="Prod_ImageName" hidden />

<div class="col-md-6">

            <img src="~/Images/AppImages/Departments/Categories/Products/@Model.Prod_ImageName" />
</div>

<div class="col-md-6">
            <label asp-for="Prod_Title" class="form-label ms-2">اسم القسم الفرعي</label>
            <input type="text" class="form-control" placeholder="Category"  asp-for="Prod_Title" readonly>
</div>

    <input type="submit" class="btn btn-danger" value="حذف" />
        <a asp-controller="Products" asp-action="Index" asp-route-SubCategoryId="@Model.SubcategoryId" asp-route-CategoryId="@Model.categoryId" class="btn btn-secondary">الرجوع</a>


    </form>
</div>

