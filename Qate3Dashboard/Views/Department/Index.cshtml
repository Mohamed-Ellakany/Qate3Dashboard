
@model IEnumerable<DepartmentViewModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "الاقسام";
}


    <div class="buttons container mb-3">
        <div class="row  justify-content-center">

            <div class="col-md-4  ">
                <a asp-controller="Department" asp-action="CreateDepartment"  class="btn  d-block" >اضافة قسم</a>
            </div>
       

        </div>

    </div>

    @if(Model.Count()>0){

    <div class="Departments mb-4">

        <div class="container text-center">
            <div class="row g-4">
                @foreach(var department in Model)
                {
                    
                    <div class="col-md-3  " >
                        <div class="card d-block">

                           
                            <a asp-route-DepartmentId="@department.Id" asp-action="Index" asp-controller="Category">

                              
                            <img src="~/Images/AppImages/Departments/@department.Dept_ImageName" class="card-img-top" alt="image" />
                    <div class="card-body">

                            <h5 class="card-title appColor">@department.Dept_Title</h5>
                            
                            <a asp-controller="Department" asp-action="Edit" asp-route-Id="@department.Id" class="btn btn-warning text-white w-100 my-2" >تعديل</a>
                                <a asp-controller="Department" asp-action="Delete" asp-route-Id="@department.Id" class="btn btn-danger text-white w-100 my-2">حذف</a>
                        </div>
                            </a>

                    </div>
                </div>
                }
                

            </div>

        </div>

    </div>


}else
{
    <div class=" alert-warning alert">
        <h2>لا يوجد اقسام :( </h2>

    </div>
}
