
@model IEnumerable<CategoriesViewModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "الاقسام الفرعية";
}


<center> <h1 class="d-block">قسم @ViewBag.DepartmentName </h1></center>
 


<div class="buttons container mb-3">
        <div class="row  justify-content-md-start">
            <div class="col-md-4">
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-danger bg-white backbtn  appColor"><i class="fa-solid fa-arrow-alt-circle-left textHover     "></i>  الرجوع الي الشاشة الرئيسية  </a>

            </div>


        <div class="col-md-4  ">
            <a class="btn  d-block" asp-controller="Category" asp-route-DepartmentId="@ViewBag.DeptId" asp-action="CreateCategory">اضافة قسم فرعي</a>
         </div>
          

        </div>

    </div>

    @if(Model.Count()>0){

    <div class="Categories mb-4">

        <div class="container text-center">
            <div class="row g-4">
                @foreach(var category in Model)
                {
                    <div class="col-md-3  " >
                    <div class="card d-block">
                            <a asp-action="Index" asp-controller="SubCategory" asp-route-CategoryId="@category.Id" >


                                <img src="~/Images/AppImages/Departments/Categories/@category.Cat_ImageName" class="card-img-top" alt="image" />
                    <div class="card-body">

                                    <h5 class="card-title appColor">@category.Cat_Title</h5>

                                    <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id" asp-route-DepartmentId="@ViewBag.DeptId" class="btn btn-warning text-white w-100 my-2">تعديل</a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id"  class="btn btn-danger text-white w-100 my-2">حذف</a>
                        </div>
                            </a>

                    </div>
                </div>
                }
                

            </div>

        </div>

    </div>


}else
{
    <div class=" alert-warning alert">
        <h2>لا يوجد اقسام فرعية :( </h2>

    </div>
}
